<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray3">


        <com.example.test.ui.RoundImageView
            android:id="@+id/iv_order_animal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            app:radius="7.5dp"
            android:background="@drawable/animal" />

        <TextView
            android:id="@+id/tv_order_animal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_order_animal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="农家土鸡"
            android:textSize="16sp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:id="@+id/tv_order_time_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_order_animal_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="预计产出时间:"
            android:textSize="10sp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_order_time_desc"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:text="2021/12/1 - 2021/12/31 "
            android:textSize="10sp"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_order_animal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:text="生长周期："
            android:textSize="11sp"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/tv_animal_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_order_animal"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="35dp"
            android:text="180天"
            android:textSize="11sp"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_order_animal"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="35dp"
            android:text="预计产出："
            android:textSize="11sp"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/tv_animal_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_order_animal"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="35dp"
            android:text="2KG"
            android:textSize="11sp"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/tv_animal_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_order_animal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="55dp"
            android:text="您认养的动物正在加紧成长，请耐心等待哦"
            android:textSize="11sp"
            android:textColor="@color/black">
        </TextView>


    <com.example.test.ui.OrderProgressView
            android:id="@+id/order_spv"
            android:layout_width="260dp"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@id/iv_order_animal"
            app:nearOverText="即将收获"
            app:overText="收获成果" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white" />

</LinearLayout>
